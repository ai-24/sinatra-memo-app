<header>
  <h1>メモアプリ</h1>
</header>
<a class="index-button" href="/memos/new">新規作成</a>
<div class="index-body">
  <h2>リスト</h2>
  <ul>
    <% if @size > 0 %>
      <li><a href="/memos/<%= h(@memos[0]['id'])%>"><%= h(@memos[0]['title']) %></a></li>
    <% end %>
    <% if @size > 1 %>
      <li><a href="/memos/<%= h(@memos[1]['id'])%>"><%= h(@memos[1]['title']) %></li>
    <% end %>
    <% if @size > 2 %>
      <li><a href="/memos/<%= h(@memos[2]['id'])%>"><%= h(@memos[2]['title']) %></li>
    <% end %>
    <% if @size > 3 %>
      <li><a href="/memos/<%= h(@memos[3]['id'])%>"><%= h(@memos[3]['title']) %></li>
    <% end %>
  </ul>
</div>
